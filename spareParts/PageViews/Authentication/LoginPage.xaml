<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:spareParts.ViewModels.Authentication"
             x:Class="spareParts.PageViews.Authentication.LoginPage"
             x:DataType="viewmodels:LoginViewModel"
             Title="Login">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <!-- Header -->
            <VerticalStackLayout Spacing="10" Margin="0,50,0,30">
                <Label Text="Welcome Back" 
                       FontSize="32" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center" 
                       TextColor="#2C3E50" />
                
                <Label Text="Sign in to your SpareParts account" 
                       FontSize="16" 
                       HorizontalOptions="Center" 
                       TextColor="Gray" />
            </VerticalStackLayout>
            
            <!-- Login Form -->
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="15" 
                   Padding="25">
                <VerticalStackLayout Spacing="20">
                    <Entry Placeholder="Email Address" 
                           Text="{Binding Email}"
                           Keyboard="Email" 
                           FontSize="16"
                           BackgroundColor="#F8F9FA"
                           PlaceholderColor="Gray" />
                    
                    <Entry Placeholder="Password" 
                           Text="{Binding Password}"
                           IsPassword="True" 
                           FontSize="16"
                           BackgroundColor="#F8F9FA"
                           PlaceholderColor="Gray" />
                    
                    <Button Text="Sign In" 
                            Command="{Binding LoginCommand}"
                            BackgroundColor="#3498DB" 
                            TextColor="White" 
                            CornerRadius="10" 
                            HeightRequest="50" 
                            FontSize="16"
                            FontAttributes="Bold" />
                    
                    <ActivityIndicator IsVisible="{Binding IsLoading}" 
                                       IsRunning="{Binding IsLoading}" 
                                       Color="#3498DB" 
                                       HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>
            
            <!-- Sign Up Link -->
            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="Center" 
                         Spacing="5">
                <Label Text="Don't have an account?" 
                       TextColor="Gray"
                      Margin="10"
                       FontSize="14" />
                <Button Text="Sign Up" 
                        Command="{Binding NavigateToSignupCommand}"
                        BackgroundColor="Transparent" 
                        TextColor="#3498DB" 
                        FontSize="14"
                        FontAttributes="Bold" />
            </StackLayout>
            
            <!-- Demo Credentials -->
            <Frame BackgroundColor="#E8F4FD" 
                   CornerRadius="10" 
                   Padding="15" 
                   Margin="0,20,0,0">
                <VerticalStackLayout Spacing="5">
                    <Label Text="Demo Credentials:" 
                           FontSize="12" 
                           FontAttributes="Bold" 
                           TextColor="#2C3E50" />
                    <Label Text="Email: demo@spareparts.com" 
                           FontSize="11" 
                           TextColor="Gray" />
                    <Label Text="Password: demo123" 
                           FontSize="11" 
                           TextColor="Gray" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
