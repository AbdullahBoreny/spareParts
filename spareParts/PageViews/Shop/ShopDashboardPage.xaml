<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="spareParts.PageViews.Shop.ShopDashboardPage"
             Title="Shop Dashboard">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="Shop Dashboard" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Frame Grid.Row="0" 
                       Grid.Column="0" 
                       BackgroundColor="LightBlue" 
                       CornerRadius="10" 
                       Padding="15" 
                       Margin="5">
                    <VerticalStackLayout>
                        <Label Text="Total Orders" 
                               FontSize="14" 
                               TextColor="Gray" />
                        <Label Text="{Binding TotalOrders}" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="Blue" />
                    </VerticalStackLayout>
                </Frame>
                
                <Frame Grid.Row="0" 
                       Grid.Column="1" 
                       BackgroundColor="LightGreen" 
                       CornerRadius="10" 
                       Padding="15" 
                       Margin="5">
                    <VerticalStackLayout>
                        <Label Text="Total Revenue" 
                               FontSize="14" 
                               TextColor="Gray" />
                        <Label Text="{Binding TotalRevenue, StringFormat='${0:F2}'}" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="Green" />
                    </VerticalStackLayout>
                </Frame>
                
                <Frame Grid.Row="1" 
                       Grid.Column="0" 
                       BackgroundColor="LightYellow" 
                       CornerRadius="10" 
                       Padding="15" 
                       Margin="5">
                    <VerticalStackLayout>
                        <Label Text="Products" 
                               FontSize="14" 
                               TextColor="Gray" />
                        <Label Text="{Binding TotalProducts}" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="Orange" />
                    </VerticalStackLayout>
                </Frame>
                
                <Frame Grid.Row="1" 
                       Grid.Column="1" 
                       BackgroundColor="LightPink" 
                       CornerRadius="10" 
                       Padding="15" 
                       Margin="5">
                    <VerticalStackLayout>
                        <Label Text="Pending Orders" 
                               FontSize="14" 
                               TextColor="Gray" />
                        <Label Text="{Binding PendingOrders}" 
                               FontSize="24" 
                               FontAttributes="Bold" 
                               TextColor="Red" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>
            
            <Label Text="Quick Actions" 
                   FontSize="18" 
                   FontAttributes="Bold" />
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Button Grid.Row="0" 
                        Grid.Column="0" 
                        Text="Add Product" 
                        BackgroundColor="Blue" 
                        TextColor="White" 
                        CornerRadius="8" 
                        HeightRequest="50" 
                        Margin="5" 
                        x:Name="AddProductButton" />
                
                <Button Grid.Row="0" 
                        Grid.Column="1" 
                        Text="View Orders" 
                        BackgroundColor="Green" 
                        TextColor="White" 
                        CornerRadius="8" 
                        HeightRequest="50" 
                        Margin="5" 
                        x:Name="ViewOrdersButton" />
                
                <Button Grid.Row="1" 
                        Grid.Column="0" 
                        Text="Manage Products" 
                        BackgroundColor="Orange" 
                        TextColor="White" 
                        CornerRadius="8" 
                        HeightRequest="50" 
                        Margin="5" 
                        x:Name="ManageProductsButton" />
                
                <Button Grid.Row="1" 
                        Grid.Column="1" 
                        Text="Analytics" 
                        BackgroundColor="Purple" 
                        TextColor="White" 
                        CornerRadius="8" 
                        HeightRequest="50" 
                        Margin="5" 
                        x:Name="AnalyticsButton" />
            </Grid>
            
            <Label Text="Recent Orders" 
                   FontSize="18" 
                   FontAttributes="Bold" />
            
            <CollectionView x:Name="RecentOrdersCollection" 
                            HeightRequest="200">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5">
                            <Frame BackgroundColor="White" 
                                   HasShadow="True" 
                                   CornerRadius="5" 
                                   Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Label Grid.Row="0" 
                                           Text="{Binding OrderNumber}" 
                                           FontSize="14" 
                                           FontAttributes="Bold" />
                                    
                                    <Label Grid.Row="1" 
                                           Text="{Binding CustomerName}" 
                                           FontSize="12" 
                                           TextColor="Gray" />
                                    
                                    <Label Grid.Row="0" 
                                           Grid.RowSpan="2" 
                                           Grid.Column="1" 
                                           Text="{Binding Status}" 
                                           FontSize="12" 
                                           FontAttributes="Bold" 
                                           TextColor="Green" 
                                           HorizontalOptions="End" />
                                </Grid>
                            </Frame>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
