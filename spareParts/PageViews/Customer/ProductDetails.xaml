<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="spareParts.PageViews.Customer.ProductDetails"
             Title="Product Details">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Image x:Name="ProductImage" 
                   HeightRequest="200" 
                   BackgroundColor="LightGray" 
                   Aspect="AspectFit" />
            
            <Label x:Name="ProductName" 
                   FontSize="24" 
                   FontAttributes="Bold" />
            
            <Label x:Name="ProductPrice" 
                   FontSize="20" 
                   TextColor="Green" 
                   FontAttributes="Bold" />
            
            <Label x:Name="ProductDescription" 
                   FontSize="16" 
                   TextColor="Gray" />
            
            <Label Text="Specifications:" 
                   FontSize="18" 
                   FontAttributes="Bold" />
            
            <Label x:Name="ProductSpecs" 
                   FontSize="14" />
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <Stepper x:Name="QuantityStepper" 
                         Value="1" 
                         Minimum="1" 
                         Maximum="10" 
                         HorizontalOptions="Center" />
                
                <Label Grid.Column="1" 
                       Text="Quantity" 
                       VerticalOptions="Center" 
                       HorizontalOptions="Center" />
            </Grid>
            
            <Button Text="Add to Cart" 
                    BackgroundColor="Blue" 
                    TextColor="White" 
                    CornerRadius="8" 
                    HeightRequest="50" 
                    x:Name="AddToCartButton" />
            
            <Button Text="Buy Now" 
                    BackgroundColor="Green" 
                    TextColor="White" 
                    CornerRadius="8" 
                    HeightRequest="50" 
                    x:Name="BuyNowButton" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
