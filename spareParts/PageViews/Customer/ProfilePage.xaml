<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="spareParts.PageViews.Customer.ProfilePage"
             Title="Profile">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Label Text="My Profile" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" />
            
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="10" 
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Personal Information" 
                           FontSize="18" 
                           FontAttributes="Bold" />
                    
                    <Entry Placeholder="Full Name" 
                           x:Name="NameEntry" />
                    
                    <Entry Placeholder="Email" 
                           x:Name="EmailEntry" 
                           Keyboard="Email" />
                    
                    <Entry Placeholder="Phone Number" 
                           x:Name="PhoneEntry" 
                           Keyboard="Telephone" />
                    
                    <Entry Placeholder="Address" 
                           x:Name="AddressEntry" />
                    
                    <Button Text="Update Profile" 
                            BackgroundColor="Blue" 
                            TextColor="White" 
                            CornerRadius="8" 
                            HeightRequest="45" />
                </VerticalStackLayout>
            </Frame>
            
            <Frame BackgroundColor="White" 
                   HasShadow="True" 
                   CornerRadius="10" 
                   Padding="20">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Order History" 
                           FontSize="18" 
                           FontAttributes="Bold" />
                    
                    <CollectionView x:Name="OrdersCollection" 
                                    HeightRequest="200">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid Padding="5">
                                    <Frame BackgroundColor="LightGray" 
                                           CornerRadius="5" 
                                           Padding="10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            
                                            <Label Grid.Row="0" 
                                                   Text="{Binding OrderNumber}" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold" />
                                            
                                            <Label Grid.Row="1" 
                                                   Text="{Binding OrderDate, StringFormat='{0:MMM dd, yyyy}'}" 
                                                   FontSize="12" 
                                                   TextColor="Gray" />
                                            
                                            <Label Grid.Row="0" 
                                                   Grid.RowSpan="2" 
                                                   Grid.Column="1" 
                                                   Text="{Binding Total, StringFormat='${0:F2}'}" 
                                                   FontSize="14" 
                                                   FontAttributes="Bold" 
                                                   TextColor="Green" 
                                                   HorizontalOptions="End" />
                                        </Grid>
                                    </Frame>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>
            
            <Button Text="Sign Out" 
                    BackgroundColor="Red" 
                    TextColor="White" 
                    CornerRadius="8" 
                    HeightRequest="50" 
                    x:Name="SignOutButton" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
